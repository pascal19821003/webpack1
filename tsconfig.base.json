{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES6",
    "esModuleInterop": true,
    "target": "ES2019",
    "jsx": "react",
    "declaration": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "Node", //node16
    "resolveJsonModule": true,
    "types": [ "node"],
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}

