{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES6",
    "esModuleInterop": true,
    "target": "ES2019",
    "jsx": "react",
    "declaration": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}

